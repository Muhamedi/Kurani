<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_surah_number"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|start"
            android:fontFamily="monospace"
            android:paddingLeft="8dp"
            android:textSize="20sp"
            tools:text="#42" />

        <TextView
            android:id="@+id/tv_surah_Name"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top|end"
            android:layout_marginEnd="54dp"
            android:fontFamily="monospace"
            android:padding="3dp"
            android:textColor="#000"
            android:textSize="20sp"
            tools:text="Emri i sures" />

        <TextView
            android:id="@+id/tv_nrOfAyasLabel"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_surah_Name"
            android:layout_below="@+id/tv_surah_Name"
            android:layout_gravity="bottom|center"
            android:fontFamily="monospace"
            android:padding="3dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            tools:text="Numri i ajeteve" />

        <TextView
            android:id="@+id/tv_nr_Of_Ayas"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_surah_Name"
            android:layout_gravity="bottom|end"
            android:layout_toEndOf="@+id/tv_nrOfAyasLabel"
            android:fontFamily="monospace"
            android:padding="3dp"
            android:text="&#8942;"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            tools:text="..." />
    </RelativeLayout>


</android.support.v7.widget.CardView>